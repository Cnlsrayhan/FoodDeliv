<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="Register"
        android:textSize="40dp"
        android:textColor="@color/buttonColor"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edt_fullname"
        android:background="@drawable/round_edt_style"
        android:hint="Full Name"
        android:paddingLeft="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/edt_email"
        android:background="@drawable/round_edt_style"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/edt_password"
        android:background="@drawable/round_edt_style"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/edt_password2"
        android:background="@drawable/round_edt_style"
        android:hint="Confirm Password"
        android:paddingLeft="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/register_btn"
        app:layout_constraintTop_toBottomOf="@+id/edt_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/round_btn_style"
        android:text="Register"
        />


</androidx.constraintlayout.widget.ConstraintLayout>